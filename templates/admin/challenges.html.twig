{% extends 'base.html.twig' %}

{% block title %}Modération des Défis{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Défis en Attente de Validation</h1>

    <div class="mb-3">
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
            ← Retour au tableau de bord
        </a>
    </div>

    {% if challenges is empty %}
        <div class="alert alert-info">
            Aucun défi en attente de validation.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Auteur</th>
                        <th>Date de proposition</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for challenge in challenges %}
                        <tr>
                            <td>{{ challenge.title }}</td>
                            <td>{{ challenge.description|length > 100 ? challenge.description|slice(0, 100) ~ '...' : challenge.description }}</td>
                            <td>{{ challenge.proposer.email }}</td>
                            <td>{{ challenge.creationDate|date('d/m/Y') }}</td>
                            <td>
                                {# Bouton Valider #}
                                <form method="post" action="{{ path('app_admin_challenge_publish', {id: challenge.id}) }}" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-success" 
                                            onclick="return confirm('Voulez-vous publier ce défi ?')">
                                        ✓ Publier
                                    </button>
                                </form>

                                {# Bouton Supprimer #}
                                <form method="post" action="{{ path('app_admin_challenge_delete', {id: challenge.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ challenge.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger" 
                                            onclick="return confirm('Voulez-vous vraiment supprimer ce défi ?')">
                                        ✗ Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}