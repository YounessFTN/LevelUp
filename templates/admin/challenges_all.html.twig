{% extends 'base.html.twig' %}

{% block title %}Tous les D√©fis{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Gestion de Tous les D√©fis</h1>

    <div class="mb-3">
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
            ‚Üê Retour au tableau de bord
        </a>
        <a href="{{ path('app_admin_challenges') }}" class="btn btn-warning">
            üìã D√©fis en attente uniquement
        </a>
    </div>

    {# Statistiques rapides #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="alert alert-info">
                <strong>Total :</strong> {{ challenges|length }} d√©fis
            </div>
        </div>
        <div class="col-md-4">
            <div class="alert alert-warning">
                <strong>En attente :</strong> {{ challenges|filter(c => c.publicationStatus == 'en_attente')|length }}
            </div>
        </div>
        <div class="col-md-4">
            <div class="alert alert-success">
                <strong>Publi√©s :</strong> {{ challenges|filter(c => c.publicationStatus == 'publi√©')|length }}
            </div>
        </div>
    </div>

    {% if challenges is empty %}
        <div class="alert alert-info">
            Aucun d√©fi dans la base de donn√©es.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Auteur</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Feedbacks</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for challenge in challenges %}
                        <tr>
                            <td>{{ challenge.id }}</td>
                            <td>
                                {{ challenge.title }}
                            </td>
                            <td>
                                {{ challenge.description|length > 80 ? challenge.description|slice(0, 80) ~ '...' : challenge.description }}
                            </td>
                            <td>{{ challenge.proposer.email }}</td>
                            <td>{{ challenge.creationDate|date('d/m/Y') }}</td>
                            <td>
                                {% if challenge.publicationStatus == 'publi√©' %}
                                    <span class="badge bg-success">Publi√©</span>
                                {% elseif challenge.publicationStatus == 'en_attente' %}
                                    <span class="badge bg-warning text-dark">En attente</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ challenge.publicationStatus }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-info">{{ challenge.feedbacks|length }}</span>
                            </td>
                            <td>
                                {# Si en attente ‚Üí Publier #}
                                {% if challenge.publicationStatus == 'en_attente' %}
                                    <form method="post" action="{{ path('app_admin_challenge_publish', {id: challenge.id}) }}" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-success" 
                                                onclick="return confirm('Publier ce d√©fi ?')">
                                            ‚úì Publier
                                        </button>
                                    </form>
                                {% endif %}

                                {# Si publi√© ‚Üí D√©publier #}
                                {% if challenge.publicationStatus == 'publi√©' %}
                                    <form method="post" action="{{ path('app_admin_challenge_unpublish', {id: challenge.id}) }}" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-warning" 
                                                onclick="return confirm('D√©publier ce d√©fi ?')">
                                            ‚Üì D√©publier
                                        </button>
                                    </form>
                                {% endif %}

                                {# Supprimer (toujours disponible) #}
                                <form method="post" action="{{ path('app_admin_challenge_delete', {id: challenge.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ challenge.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger" 
                                            onclick="return confirm('‚ö†Ô∏è Supprimer ce d√©fi ET tous ses feedbacks ?')">
                                        ‚úó Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}