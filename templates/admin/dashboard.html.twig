{% extends 'admin/base_admin.html.twig' %}

{% block title %}Tableau de bord - Admin{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h1><i class="bi bi-speedometer2"></i> Tableau de bord</h1>
        <p class="text-muted">Bienvenue, {{ app.user.username }}</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-people-fill"></i> Utilisateurs totaux</h5>
                <h2 class="card-text">{{ total_users }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-shield-lock-fill"></i> Administrateurs</h5>
                <h2 class="card-text">{{ admin_users }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-person-check-fill"></i> Utilisateurs standard</h5>
                <h2 class="card-text">{{ total_users - admin_users }}</h2>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-clock-history"></i> Derniers utilisateurs inscrits</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nom d'utilisateur</th>
                            <th>Email</th>
                            <th>Rôle</th>
                            <th>Date d'inscription</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in recent_users %}
                        <tr>
                            <td><i class="bi bi-person"></i> {{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">Admin</span>
                                {% else %}
                                    <span class="badge bg-secondary">User</span>
                                {% endif %}
                            </td>
                            <td>{{ user.registrationDate|date('d/m/Y H:i') }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">Aucun utilisateur</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-tools"></i> Actions rapides</h5>
            </div>
            <div class="card-body">
                <a href="{{ path('app_admin_users') }}" class="btn btn-primary">
                    <i class="bi bi-people"></i> Gérer les utilisateurs
                </a>
                <a href="{{ path('app_register') }}" class="btn btn-success">
                    <i class="bi bi-person-plus"></i> Créer un utilisateur
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Défis</h5>
                <p class="card-text display-4">{{ total_challenges }}</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">En Attente</h5>
                <p class="card-text display-4">{{ pending_challenges }}</p>
                <a href="{{ path('app_admin_challenges') }}" class="btn btn-light btn-sm">
                    Modérer
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Publiés</h5>
                <p class="card-text display-4">{{ published_challenges }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}