{% extends 'admin/base_admin.html.twig' %}

{% block title %}Gestion des utilisateurs - Admin{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h1><i class="bi bi-people"></i> Gestion des utilisateurs</h1>
        <p class="text-muted">{{ users|length }} utilisateur(s) au total</p>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom d'utilisateur</th>
                            <th>Email</th>
                            <th>Rôles</th>
                            <th>Inscription</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>
                                <i class="bi bi-person-circle"></i> {{ user.username }}
                                {% if user.id == app.user.id %}
                                    <span class="badge bg-info">Vous</span>
                                {% endif %}
                            </td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">
                                        <i class="bi bi-shield-lock"></i> Admin
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-person"></i> User
                                    </span>
                                {% endif %}
                            </td>
                            <td>{{ user.registrationDate|date('d/m/Y') }}</td>
                            <td>
                                {% if user.id != app.user.id %}
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        <form method="post" action="{{ path('app_admin_user_demote', {id: user.id}) }}" style="display:inline;">
                                            <button class="btn btn-sm btn-warning" title="Rétrograder">
                                                <i class="bi bi-arrow-down-circle"></i> Rétrograder
                                            </button>
                                        </form>
                                    {% else %}
                                        <form method="post" action="{{ path('app_admin_user_promote', {id: user.id}) }}" style="display:inline;">
                                            <button class="btn btn-sm btn-success" title="Promouvoir admin">
                                                <i class="bi bi-arrow-up-circle"></i> Promouvoir
                                            </button>
                                        </form>
                                    {% endif %}
                                    
                                    <form method="post" action="{{ path('app_admin_user_delete', {id: user.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}